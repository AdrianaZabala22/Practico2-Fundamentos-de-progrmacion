#include <stdio.h>
#include <math.h>
int main() {
    double x, suma = 0, fact = 1;
    int n, k;
    printf("X = "); scanf("%lf", &x);
    printf("n = "); scanf("%d", &n);
    for(k = 1; k <= n; k++) {
        fact *= k;
        if(k % 2 == 1) suma += pow(x, k) / fact;
        else suma -= pow(x, k) / fact;
    }
    printf("S = %.6lf\n", suma);
    return 0;
}
